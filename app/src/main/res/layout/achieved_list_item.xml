<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="95dp"
    android:background="@android:color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/bright_yellow"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/del_ach_btn"
            android:layout_width="40dp"
            android:layout_height="33dp"
            android:layout_marginEnd="5dp"
            android:foreground="@drawable/ic_action_del"
            android:text="@string/xdel"
            android:textColor="@color/red"
            android:contentDescription="@string/delete_achieved_alert"/>

        <TextView
            android:id="@+id/ach_alert_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/dk_red"
            android:gravity="center"
            android:text="@string/xx"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/l2col"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:background="@color/bright_yellow"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/cmc_ach_btn"
                android:foreground="@drawable/ic_action_cmc"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:text="@string/xdel"
                android:textColor="@color/red"
                android:contentDescription="@string/coinmarketcap_link" />

            <ImageButton
                android:id="@+id/csel_ach_btn"
                android:layout_width="35dp"
                android:layout_height="33dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentStart="true"
                android:contentDescription="@string/coinmarketcap_link"
                android:foreground="@drawable/ic_action_csel"
                android:text="@string/xdel"
                android:textColor="@color/red" />

        </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/l3col"
        android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/l5col"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/ach_alert_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:text="@string/x"
            android:textColor="@color/l4col"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/price_ach_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/xx"
            android:textColor="@color/l4col" />
        <TextView
            android:id="@+id/ach_time_stamp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="12sp"
            android:text="@string/x"
            android:textColor="@color/bright_yellow" />

    </LinearLayout>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/ach_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:background="@android:color/black">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:gravity="center"
                android:text="@string/threshold"
                android:textColor="@color/l4col"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ach_thresh_val"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_column="2"
                android:text="@string/xx"
                android:textColor="@color/l4col"
                android:textSize="13sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/black">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:background="@android:color/black"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ach_icon_specifier"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginStart="55dp"
                    android:contentDescription="@string/data_na_icon"
                    app:srcCompat="@drawable/ic_action_not_available" />
            </LinearLayout>

            <TextView
                android:id="@+id/ach_threshold_brk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_column="2"
                android:text="@string/not_avail"
                android:textColor="@color/bright_yellow"
                android:textSize="13sp" />
        </TableRow>
    </TableLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/bright_yellow"
        android:gravity="center"
        android:text="@string/xx"
        android:textSize="1sp"
        tools:ignore="SmallSp" />
    </LinearLayout>
</LinearLayout>
</LinearLayout>