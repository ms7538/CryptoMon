<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/black"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:gravity="center"
        android:text="@string/alerts_"
        android:textColor="@color/fade5"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/alerts_crypto_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/x"
        android:textColor="@color/l4col"
        android:textSize="18sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="5dp"
        android:background="@color/l5col">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:labelFor="@id/price_input"
                android:text="@string/price"
                android:textColor="@color/l3col"
                android:textSize="18sp" />

            <Button
                android:id="@+id/price_setBtn"
                android:layout_width="15dp"
                android:layout_height="32dp"
                android:layout_column="2"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:text="@string/set"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:orientation="horizontal">


                <TextView
                    android:id="@+id/alerts_price_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dollar_sign"
                    android:textColor="@color/l3col"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <EditText
                    android:id="@+id/price_input"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:ems="12"
                    android:inputType="numberDecimal"
                    android:textColor="@color/fade3"
                    android:textColorHint="@color/et_hint" />
            </LinearLayout>
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="1"
                android:layout_marginTop="10dp"
                android:text="@string/_24_hour_volume"
                android:textColor="@color/l3col"
                android:textSize="16sp" />

            <Button
                android:id="@+id/vol_setBtn"
                android:layout_width="45dp"
                android:layout_height="32dp"
                android:layout_column="2"
                android:textSize="10sp"
                android:layout_gravity="center"
                android:text="@string/set"
                tools:ignore="SmallSp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/alerts_volume_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dollar_sign"
                    android:textColor="@color/l3col"
                    android:textSize="16sp"
                    tools:ignore="RelativeOverlap" />

                <EditText
                    android:id="@+id/volume_input"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:ems="20"
                    android:inputType="number"
                    android:textColor="@color/fade3"
                    android:textColorHint="@color/et_hint"
                    tools:ignore="LabelFor" />
            </LinearLayout>
        </TableRow>
    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="105dp"
        android:background="@color/l5col">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textView"
            android:layout_marginEnd="37dp"
            android:text="TextView"
            android:textColor="@color/l3col" />

        <Button
            android:id="@+id/alerts_OK_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/set" />

        <Button
            android:id="@+id/alerts_NO_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:text="@string/back"
            tools:ignore="RelativeOverlap" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="30dp"
            android:text="TextView"
            android:textColor="@color/l3col" />

    </RelativeLayout>



</LinearLayout>